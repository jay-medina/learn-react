{
  "name": "react-fundamentals",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "watch": "jest --watch",
    "build": "webpack",
    "start": "webpack-dev-server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/enzyme": "^2.8.0",
    "@types/jest": "^19.2.4",
    "@types/react": "^15.0.27",
    "@types/react-dom": "^15.5.0",
    "enzyme": "^2.8.2",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.5.4",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.1.0",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "redux": "^3.6.0",
    "typescript": "^2.3.4"
  },
  "jest": {
    "cacheDirectory": "./.jest",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coveragePathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/dist/"],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    },
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
